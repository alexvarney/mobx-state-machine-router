{
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec -- yarn build",
    "build:watch": "lerna exec -- yarn build --watch",
    "test:coverage": "jest --coverage --forceExit --colors",
    "lint:fix": "npm run lint --fix",
    "prepare": "npm run build",
    "prerelease": "npm run lint:fix && npm run test:coverage && npm run build",
    "release": "np publish",
    "publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "test:ci": "jest --ci --collectCoverage=true",
    "preversion": "yarn ci:test",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier:check": "prettier --check 'packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:write": "prettier --write 'packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "ci:test": "yarn lint && yarn test --coverage"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "jest": "25.3.0",
    "lerna": "^3.20.2",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "ts-jest": "25.4.0",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^3.8.3"
  }
}
